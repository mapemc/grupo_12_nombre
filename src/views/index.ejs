                <a href="#" class="logo-icon">
                    <img src="./img/indexImgs/eukanuba.png">
                </a>
                <a href="#" class="logo-icon">
                    <img src="./img/indexImgs/nutrique.png">
                </a>
                <a href="#" class="logo-icon">
                    <img src="./img/indexImgs/pedigree.png">
                </a>
                <a href="#" class="logo-icon">
                    <img src="./img/indexImgs/proplan.png">
                </a>
                <a href="#" class="logo-icon">
                    <img src="./img/indexImgs/royalcanin.png">
                </a>
                <a href="#" class="logo-icon">
                    <img src="./img/indexImgs/vitalcan.png">
                </a>
            </div>
        </div>
    </section>
    
    
    
    
              
