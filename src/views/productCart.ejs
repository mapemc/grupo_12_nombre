    <main>
        <section class="title">
            <h1>Tu carrito de compras</h1>
        </section>
        
        <!-- LISTA PRODUCTOS -->
        <div class="view">
            <section class="product-container">    
                <!-- item 1 -->
                <ul class="item">
                    <li class="product-visual">
                        <img src="/img/otrosProductos1.jpg" alt="Collar para perro">
                    </li>
                    <li class="info">
                        <p class="productName">Collar para perro</p>
                        <span class="product-quantity">
