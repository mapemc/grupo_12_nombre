                            <li class="score">
                                <input type="radio" name="star4">
                            </li>
                            <li class="score">
                                <input type="radio" name="star5">
                        </ul>
                    <!-- Precio -->
                        <p class="price">$500</p>
                    <!-- Botones fav y borrar -->
                        <span  class="btn-container">
                            <div>
                                <button class="delete-item" type="button">
                                    <i class="fa-solid fa-x"></i>
                                </button>
                            </div>
                            <div>
